{
    "$schema": "http://json.schemastore.org/template",
    "author": "Ahmet Emin ŞİT",
    "icon": "icon.png",
    "classifications": [
        "Web",
        "Api",
        "MVC"
    ],
    "identity": "PureNCore",
    "name": "PureNCore Api Template",
    "description": "Pure N-tier project template",
    "shortName": "purencore",
    "sourceName": "PureNCore",
    "tags": {
        "language": "C#",
        "type": "solution"
    },
    "preferNameDirectory": true,
    "symbols": {
        "Framework": {
            "type": "parameter",
            "description": "The target framework for the project.",
            "datatype": "choice",
            "choices": [
                { "choice": "net6.0"},
                { "choice": "net5.0"}
            ],
            "defaultValue": "net5.0",
            "replaces": "{TargetFramework}"
        }
    }
}