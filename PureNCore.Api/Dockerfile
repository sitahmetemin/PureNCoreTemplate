#See https://aka.ms/containerfastmode to understand how Visual Studio uses this Dockerfile to build your images for faster debugging.

FROM mcr.microsoft.com/dotnet/aspnet:6.0 AS base
WORKDIR /app
EXPOSE 80

FROM mcr.microsoft.com/dotnet/sdk:6.0 AS build
WORKDIR /src
COPY ["PureNCore.Api/PureNCore.Api.csproj", "PureNCore.Api/"]
RUN dotnet restore "PureNCore.Api/PureNCore.Api.csproj"
COPY . .
WORKDIR "/src/PureNCore.Api"
RUN dotnet build "PureNCore.Api.csproj" -c Release -o /app/build

FROM build AS publish
RUN dotnet publish "PureNCore.Api.csproj" -c Release -o /app/publish

FROM base AS final
WORKDIR /app
COPY --from=publish /app/publish .
ENTRYPOINT ["dotnet", "PureNCore.Api.dll"]